extends layout

block content
  #mainwrapper
    h1.title-big CRUD
    #contentwrapper
      #content-crud
        .innertube
          h1(style="color: var(--accent-complement-dark);") Edit Composer
          if composerFormHtml
            != composerFormHtml
          else
            h1 Please select one composer
    nav
      #rightmenu
        .innertube
          each composer in composers
            h1: a(href="/compositores/edit/"+composer.id)= composer.nome
    include nav.pug
    include footer.pug
    - if (post)
      script alert("#{string}");
